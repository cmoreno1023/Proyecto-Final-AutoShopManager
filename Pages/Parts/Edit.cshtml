@page
@model AutoShopManager.Pages.Parts.EditModel
@{
    ViewData["Title"] = "Edit Part";
}

<h1>Edit Part</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Part.IdPart" />

            <div class="form-group mb-3">
                <label asp-for="Part.Name" class="control-label"></label>
                <input asp-for="Part.Name" class="form-control" />
                <span asp-validation-for="Part.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Part.PartNumber" class="control-label"></label>
                <input asp-for="Part.PartNumber" class="form-control" />
                <span asp-validation-for="Part.PartNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Part.Price" class="control-label"></label>
                <input asp-for="Part.Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Part.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Part.Stock" class="control-label"></label>
                <input asp-for="Part.Stock" class="form-control" type="number" />
                <span asp-validation-for="Part.Stock" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Part.Provider" class="control-label"></label>
                <input asp-for="Part.Provider" class="form-control" />
                <span asp-validation-for="Part.Provider" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

