@page
@model AutoShopManager.Pages.Parts.IndexModel
@{
    ViewData["Title"] = "Parts";
}

<h1>Parts</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Parts[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Parts[0].PartNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Parts[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Parts[0].Stock)</th>
            <th>@Html.DisplayNameFor(model => model.Parts[0].Provider)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Parts)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.PartNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>@Html.DisplayFor(modelItem => item.Provider)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdPart" class="btn btn-warning">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.IdPart" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
