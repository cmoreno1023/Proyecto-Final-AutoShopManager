@page
@model AutoShopManager.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">
            @Model.Appointment.Client?.FirstName @Model.Appointment.Client?.LastName
        </dd>

        <dt class="col-sm-2">Vehicle</dt>
        <dd class="col-sm-10">
            @Model.Appointment.Vehicle?.Brand @Model.Appointment.Vehicle?.Model (@Model.Appointment.Vehicle?.LicensePlate)
        </dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">
            @Model.Appointment.Date.ToShortDateString()
        </dd>

        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">
            @Model.Appointment.Time.ToString("HH:mm")
        </dd>

        <dt class="col-sm-2">Service Description</dt>
        <dd class="col-sm-10">
            @Model.Appointment.ServiceDescription
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Appointment.IdAppointment" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
